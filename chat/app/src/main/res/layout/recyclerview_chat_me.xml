<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    >

    <TextView
        android:id="@+id/recycler_chat_me_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="8sp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_chat_me"
        app:layout_constraintEnd_toStartOf="@+id/recycler_chat_me"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <TextView
        android:id="@+id/recycler_chat_me_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"

        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_chat_me"
        app:layout_constraintEnd_toStartOf="@+id/recycler_chat_me_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <TextView
        android:id="@+id/recycler_chat_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:layout_marginTop="10dp"
        android:text="안녕하세요?"
        android:gravity="center"
        android:background="@drawable/chatme"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></TextView>

  \

</androidx.constraintlayout.widget.ConstraintLayout>